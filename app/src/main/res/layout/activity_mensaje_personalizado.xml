<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pe.com.sedaloreto.appsms.MensajePersonalizado">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="Mensaje"
                android:textSize="22dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:id="@+id/txtMensaje"
                android:inputType="textMultiLine"
                android:hint="Escriba mensaje"
                android:background="@drawable/cornerstext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar a todo los clientes"
                android:id="@+id/chkTodoClientes"
                android:textAlignment="inherit"
                android:singleLine="false"
                android:hyphenationFrequency="normal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:id="@+id/btnConfirmar"
                android:background="@drawable/butonstyle" />

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:id="@+id/btVolver"
                android:layout_marginLeft="10dp"
                android:background="@drawable/butonstyle" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
