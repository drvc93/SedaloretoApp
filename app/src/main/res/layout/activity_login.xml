<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pe.com.sedaloreto.appsms.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#1f1b1b" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/edittexstyle"
            android:id="@+id/txtUser"
            android:padding="9dp"
            android:layout_marginTop="10dp"
            android:hint="Usuario"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edittexstyle"
            android:id="@+id/txtContra"
            android:padding="9dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="contraseÃ±a"
            android:inputType="textPassword" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:drawableLeft="@drawable/entrar"
                android:background="@drawable/butonstyle"
                android:id="@+id/btnEntrar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/exit"
                android:background="@drawable/butonstyle"
                android:text="SALIR"
                android:id="@+id/btnSalir"
                android:layout_marginLeft="7dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logoeps"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/frameLogo"></FrameLayout>

    </LinearLayout>

</RelativeLayout>
