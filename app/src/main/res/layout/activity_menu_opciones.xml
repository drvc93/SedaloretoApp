<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pe.com.sedaloreto.appsms.MenuOpciones">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a la aplicacion de envio de mensajes de SEDALORETO"
                    android:id="@+id/textView"
                    android:textAlignment="center"
                    android:textColor="#f80e1a5d"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:typeface="monospace" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Enviar Mensajes de alerta"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnOpcEnvioSMS"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Mensaje Personalizado"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnMsnPersonalizado"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Reiniciar estado cliente"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnResetCliente"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Lista de clientes"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnOpcLista"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Contador de Mensajes"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnContadorSms"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:text="Cerrar Sesion"
                    android:background="@drawable/butonstyle"
                    android:id="@+id/btnOpcCerrarSesion"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
